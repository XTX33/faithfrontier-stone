{
  "name": "faithfrontier",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "preflight": "node -v && npm -v",
    "lint": "eslint \"assets/js/**/*.js\" \"worker/**/*.js\" \"scripts/verify-frontend-js.js\" \"eslint.config.js\"",
    "lint:fix": "eslint \"assets/js/**/*.js\" \"worker/**/*.js\" \"scripts/verify-frontend-js.js\" \"eslint.config.js\" --fix",
    "format": "prettier \"assets/js/main.js\" \"assets/js/nav.js\" \"scripts/check-*.js\" \"tests/**/*.js\" \"playwright.config.js\" \"eslint.config.js\" --write",
    "format:check": "prettier \"assets/js/main.js\" \"assets/js/nav.js\" \"scripts/check-*.js\" \"tests/**/*.js\" \"playwright.config.js\" \"eslint.config.js\" --check",
    "lint:content": "node scripts/check-markdown-css.js",
    "verify:nav-snapshot": "node scripts/check-nav-snapshot.js",
    "verify:frontend": "node scripts/verify-frontend-js.js",
    "build": "jekyll build",
    "test:nav": "npx playwright test tests/nav.spec.js",
    "check:pdf-health": "node scripts/check-pdf-health.js",
    "check:pdfs": "node scripts/check-pdf-links.js --site _site",
    "check:site-links": "node scripts/check-site-links.js --site _site",
    "fix:pdf-homes": "node scripts/generate-placeholder-pdfs.js",
    "fix:pdf-homes:force-tiny": "node scripts/generate-placeholder-pdfs.js --force-tiny",
    "analyze": "node scripts/analyze-cases.js",
    "docket:intake": "node scripts/docket-intake.js",
    "docket:validate": "node scripts/validate-docket-files.js",
    "docket:batch": "node scripts/batch-upload-helper.js",
    "checksums": "node scripts/generate-checksums.js",
    "changelog:weekly": "node scripts/generate-weekly-changelog.js",
    "governance:audit": "node scripts/refactor-with-governance.js --audit-only --all",
    "governance:audit:section": "node scripts/refactor-with-governance.js --audit-only --section",
    "governance:dry-run": "node scripts/refactor-with-governance.js --dry-run --all",
    "governance:refactor": "node scripts/refactor-with-governance.js --all",
    "governance:refactor:section": "node scripts/refactor-with-governance.js --section",
    "governance:refactor:file": "node scripts/refactor-with-governance.js --file",
    "phase:1": "npm run docket:validate && npm run lint:content && npm run verify:nav-snapshot && npm run analyze && npm run governance:audit",
    "phase:2": "npm run lint && npm run format:check && npm run verify:frontend",
    "phase:3": "npm run build && npm run check:pdf-health && npm run check:pdfs && npm run check:site-links && npm run checksums",
    "phase:4": "npm run test:nav",
    "run:phases": "npm run preflight && npm run phase:1 && npm run phase:2 && npm run phase:3 && npm run phase:4",
    "verify:fast": "npm run preflight && npm run phase:1 && npm run phase:2",
    "verify:full": "npm run run:phases",
    "check:all": "npm run build && npm run check:pdf-health && npm run check:pdfs && npm run check:site-links && npm run checksums",
    "fix:all": "npm run lint:fix && npm run format && npm run fix:pdf-homes",
    "verify": "npm run verify:full"
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "js-yaml": "^4.1.1",
    "multer": "^2.0.2",
    "openai": "^6.9.0",
    "pdf-parse": "^2.4.5",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "eslint": "^9.20.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2"
  },
  "description": "**Faith Frontier** is a Christian-informed public trust that documents legal matters, teaches civic responsibility, and stewards property initiatives with humility and accountability. The project serves the public under the U.S. Constitution and state law, and treats faith as a guide to conscienceâ€”not as extrajudicial authority.",
  "main": "eslint.config.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/XTX33/faithfrontier-stone.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/XTX33/faithfrontier-stone/issues"
  },
  "homepage": "https://github.com/XTX33/faithfrontier-stone#readme"
}