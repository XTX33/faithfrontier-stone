{
  "name": "faithfrontier",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "lint": "eslint \"assets/js/**/*.js\" \"worker/**/*.js\" \"scripts/verify-frontend-js.js\" \"eslint.config.js\"",
    "lint:fix": "eslint \"assets/js/**/*.js\" \"worker/**/*.js\" \"scripts/verify-frontend-js.js\" \"eslint.config.js\" --fix",
    "lint:content": "node scripts/check-markdown-css.js",
    "verify:nav-snapshot": "node scripts/check-nav-snapshot.js",
    "format": "prettier \"assets/js/main.js\" \"assets/js/nav.js\" \"scripts/check-*.js\" \"tests/**/*.js\" \"playwright.config.js\" \"eslint.config.js\" --write",
    "format:check": "prettier \"assets/js/main.js\" \"assets/js/nav.js\" \"scripts/check-*.js\" \"tests/**/*.js\" \"playwright.config.js\" \"eslint.config.js\" --check",
    "verify:frontend": "node scripts/verify-frontend-js.js",
    "test:nav": "npx playwright test tests/nav.spec.js",

    "analyze": "node scripts/analyze-cases.js",
    "docket:intake": "node scripts/docket-intake.js",
    "checksums": "node scripts/generate-checksums.js",
    "changelog:weekly": "node scripts/generate-weekly-changelog.js"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "js-yaml": "^4.1.1",
    "multer": "^2.0.2",
    "openai": "^6.9.0",
    "pdf-parse": "^2.4.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "eslint": "^9.20.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2"
  }
}
